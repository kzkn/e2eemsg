!!! html
%html
  %head
    %title= content_for(:title) || "e2eemsg"
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    = stylesheet_link_tag :app, "data-turbo-track": "reload"
    = javascript_importmap_tags
    -# TODO: importmap で管理したい
    %script{ type: "module", src: "https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js" }
  %body
    %div{ data: { controller: skip_reauth? ? nil : 'reauth' } }
    %main
      = yield
    - if user_signed_in?
      %div
        = button_to 'ログアウト', session_path, method: :delete
