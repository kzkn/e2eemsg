!!! html
%html
  %head
    %title= content_for(:title) || "e2eemsg"
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    = stylesheet_link_tag :app, "data-turbo-track": "reload"
    -# TODO: package.json で管理したい
    %script{ type: "module", src: "https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js" }
    = javascript_include_tag 'application', type: "module", "data-turbo-track": "reload"
  %body
    = render 'layouts/messaging_session'
    %main
      = yield
    - if user_signed_in?
      %div
        = button_to 'ログアウト', session_path, method: :delete
